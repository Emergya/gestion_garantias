<fieldset>
<legend><h2><%= l(:"article.articles") %></h2></legend>
<table class="list">
<thead>
<tr>
   <th><%= l(:"article.code_article") %></th>
   <th><%= l(:"article.name_provider") %></th>
   <th><%= l(:"ans.ans") %></th>
   <th><%= l(:"article.permissions") %></th>

</tr>
</thead>
<tbody>
	<% @articles.each do |article| %>
    <tr class="<%= cycle("odd", "even") %> tooltip_contacts" title="<hr><%= article.show_contacts %>">
    	<td><%= link_to article.code_article+"/"+article.code_type_material.to_s, edit_project_gg_file_gg_article_path(@file, article, :project_id => @project) %></td>
    	<td><%= article.name_provider %></td>
    	<td><a href="#" class="button_ans" data-id="<%= article.id %>">Consultar</a></td>
    	<td>
    		<%= link_to '<span class="icon icon-edit">'.html_safe+l(:text_edit), edit_project_gg_file_gg_article_path(@file, article, :project_id => @project) %>
        <%# link_to '<span class="icon icon-copy">'.html_safe+l(:text_copy), copy_project_gg_file_gg_article_path(@file, article, :project_id => @project) %>
        <%= link_to '<span class="icon icon-del">'.html_safe+l(:text_delete), project_gg_file_gg_article_path(@file,article, :project_id => @project), :confirm => l(:"article.confirm_delete"), :method => :delete %>
      </td>
      <div class="dialog_ans dialog_ans_<%= article.id.to_s %>" title="ANS">
          <% if !article.gg_ans.empty? %>
            <% article.gg_ans.each do |ans| %>
              <hr>
                <p class="dialog_ans_title"><%= l(:"ans.priority") %>:</p>
                <p><%= ans[:priority] %></p>
                <p class="dialog_ans_title"><%= l(:"ans.description") %>:</p>
                <p><%= ans[:description] %></p>
              <hr>
            <% end %>
          <% else %>
            <hr>
              <p><i><center><%= l(:"ans.ans_empty") %></center></i></p>
            <hr>
          <% end %>
      <div>
    </tr>
    <% end %>
</tbody>
</table>
<p class="pagination"><%= pagination_links_full @articles_pages, @articles_count %></p>
</fieldset><br>
</fieldset>